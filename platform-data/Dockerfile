FROM centos:6

# Add appdynamics user and set permissions
RUN groupadd -r -g 2002 appdynamics \
    && useradd --create-home --gid appdynamics -u 2001 appdynamics \
    && mkdir -p /appdynamics \
    && chown -R appdynamics:appdynamics /appdynamics

VOLUME /appdynamics

CMD ["echo", "Persistent data container for Appdynamics Platform"]
